{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "frontendDist": "../src"
  },
  "productName": "Sticky Notes",
  "version": "0.1.0",
  "identifier": "com.sticky.notes",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sticky Notes",
        "fullscreen": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "windowEffects":{
          "effects": ["acrylic"]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "tray": {
      "default": true
    }
  }
}
